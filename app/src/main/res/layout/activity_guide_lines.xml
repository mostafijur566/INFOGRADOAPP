<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".GuideLines">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFOGRADO APP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5fa662"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUIDELINES"
        android:textAlignment="center"
        android:textColor="#111"
        android:fontFamily="@font/architectsdaughter_regular"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="1. Input the Student Name and LRN\n2. Get the 7 subject grade of student\n3. Add the 7 subject grade and divide into 7"
        android:textColor="#111"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:fontFamily="@font/architectsdaughter_regular"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_border"
        android:textStyle="bold"
        android:elevation="20dp"
        />

</LinearLayout>